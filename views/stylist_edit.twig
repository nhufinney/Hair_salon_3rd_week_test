<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

<div class ="container">
    <h1>Update information for the stylist: {{ stylist.getStylist }} </h1>

    <form action="/stylists/{{ stylist.getId }}" method="post">
        <input type="hidden" name="_method" value="patch">
        <br>
        <br>
        <label for="stylist">Rename the stylist:</label>
        <input type="text" name="stylist" id="stylist">
        <button type="submit">Update</button>

    </form>
    <br>
    <br>
    <form action="/stylist/{{ stylist.getId }}" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit">Delete this stylist</button>
    </form>
    <br><br>
    <p><a href="/">Return home</a></p>
</div>
